// Minimal starting schema; Loveable will extend.
// Run: pnpm --filter @viewer/db prisma migrate dev

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  projects  Project[]
}

model Project {
  id        String   @id @default(cuid())
  name      String
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  models    Model[]
  createdAt DateTime @default(now())
}

model Model {
  id          String   @id @default(cuid())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  name        String
  status      String   @default("pending") // pending | processing | ready | error
  originalUrl String
  createdAt   DateTime @default(now())
}
